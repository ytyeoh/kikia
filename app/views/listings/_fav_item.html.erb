
  <div class="row listing <%= listing.listing.coin >= 1 ? 'dark-green' : ' ' %>">
    <%= link_to listing do %>
    <div class="col m10 s12">
      <div class="row">
        <div class="col m3 s12 slider">
      <ul class="slides">
        <% listing.listing.pictures.each do |image| %>
          <li>
            <%= image_tag image.image, class:'responsive-img' %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col m7 s12 text-left">
      <h3 class="dark-green-text"><%= listing.listing.name %></h3>
      <h4><i><%= listing.listing.city %></i></h4>
      <h6><%= listing.listing.hide == false ? listing.listing.address : '' %></h6>
    </div>
      </div>
    </div>
    <% end %>
    <div class="col m2 s12">
      <% if listing.listing.imove_in %>
        <div class='btn red lighten-1 margin-top2rem'>Instant Move In</div>
      <% end %>
      <h5 class= "dark-green-text">RM<%= listing.listing.price %> <br>per month</h5>
      <%= render 'feature_listing', :@listing =>listing.listing %>
    </div>
  </div>
