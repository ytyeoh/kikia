<div class="row">
  <div class="col s12">
    <h1><%= @listing.name %></h1>
    <p><i><%= @listing.city %></i></p>
  </div>
  <div class="col s12 desc">
    <%= @listing.desc %>
  </div>
  <div class="col s12">
    <h6 >Tel: <%= @listing.user.contact %> </h6>
  </div>
  <div class="col s12">
    <h6 ><%= "Instant Move In" if @listing.active %> </h6>
  </div>
  <div class="col s12 price">
    <span>RM<%= @listing.price %></span> per month
  </div>
  <div class="col s3"><i class="fa fa-bed dark-green-text" aria-hidden="true"></i></div>
  <div class="col s1">:</div>
  <div class="col s8"><%= @listing.price %></div>
  <div class="col s3"><i class="fa fa-shower dark-green-text" aria-hidden="true"></i></div>
  <div class="col s1">:</div>
  <div class="col s8"><%= @listing.price %></div>
  <div class="col s3"><i class="fa fa-car dark-green-text" aria-hidden="true"></i></div>
  <div class="col s1">:</div>
  <div class="col s8"><%= @listing.price %></div>
  <div class="col s3">Area</div>
  <div class="col s1">:</div>
  <div class="col s8"><%= @listing.price %> sqft</div>
  <div class="col s3">City</div>
  <div class="col s1">:</div>
  <div class="col s8"><%= @listing.city %></div>
  <div class="col s3">Type</div>
  <div class="col s1">:</div>
  <div class="col s8"><%= @listing.price %></div>

  <div class="col s3 owner">
    <i class="fa fa-user dark-green-text" aria-hidden="true"></i> Owner
  </div>
  <div class="col s1 owner">:</div>
  <div class="col s8 owner">
    <%= link_to @listing.user.name, user_path(@listing.user_id) %>
  </div>
  
  <% unless @listing.hide %>
    <div class="col s3 owner">
      <i class="fa fa-map-marker red-text" aria-hidden="true"></i> Address
    </div>
    <div class="col s1 owner">:</div>
    <div class="col s8 owner">
      <%= @listing.address %>
    </div>
  <% end %>

</div>