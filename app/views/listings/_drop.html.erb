      event.preventDefault();
      event.stopPropagation();
      myDropzone.processQueue();
    }
    else {
      // Upload anyway without files
      dropzone.uploadFiles([ ]);
    }
     // Tell Dropzone to process all queued files.
  });
  myDropzone.on("queuecomplete", function(file) {
