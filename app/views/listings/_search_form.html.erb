    }
  );
  $('.move_in').click(function () {
    $('.hli').toggleClass('hli');
    $(this).toggleClass('hli');
    var Id = $(this).find('input[type=radio]').attr('id');
    document.getElementById(Id).click();
  });
  $(".dropdown-content").click(function(e){
    e.stopPropagation();
  });
  $('.dropdown-content').on('touchstart click', function (e) {
    e.stopPropagation();
  });
</script>