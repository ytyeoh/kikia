
  <div class="card-panel teal white-text padding-bottom2rem">
    <div class="col s12 m4">
      Purchase Time: <%= credit.created_at.localtime.strftime("%Y-%m-%d %I:%M %p") %>
    </div>
    <div class="col s12 m4">
      Type: <%= credit.item.capitalize %>
    </div>
    <div class="col s12 m4">
      <div class="row">
        <div class="col s6">
          Balance Credit: <%= credit.balance %>
        </div>
        <div class="col s6">
          Credit Before: <%= credit.credit %>
        </div>
      </div>
    </div>
  </div>
